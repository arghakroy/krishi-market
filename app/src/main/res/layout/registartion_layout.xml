<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context="me.argha.sustproject.LoginActivity">
	<include layout="@layout/app_bar"/>
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1">
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="?attr/actionBarSize"
				android:background="#fff"
				android:layout_margin="20dp"
				android:orientation="vertical"
				android:padding="20dp"
				android:gravity="center">
			<android.support.design.widget.TextInputLayout
					android:id="@+id/loginInputNameLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<me.argha.sustproject.views.BanglaEditText
						android:id="@+id/registerNameEt"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:singleLine="true"
						android:hint="পুরো নাম" />
			</android.support.design.widget.TextInputLayout>
			<android.support.design.widget.TextInputLayout
					android:id="@+id/loginInputEmailLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<me.argha.sustproject.views.BanglaEditText
						android:id="@+id/registerUserNameEt"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:singleLine="true"
						android:hint="ইউজার নাম" />
			</android.support.design.widget.TextInputLayout>
			<android.support.design.widget.TextInputLayout
					android:id="@+id/input_layout_email"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<me.argha.sustproject.views.BanglaEditText
						android:id="@+id/registerPasswordEt"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:inputType="textPassword"
						android:fontFamily="sans"
						android:hint="পাসওয়ার্ড" />
			</android.support.design.widget.TextInputLayout>
			<android.support.design.widget.TextInputLayout
					android:id="@+id/inputPhoneLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<me.argha.sustproject.views.BanglaEditText
						android:id="@+id/registerPhoneEt"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:inputType="textPassword"
						android:fontFamily="sans"
						android:hint="আবার পাসওয়ার্ড" />
			</android.support.design.widget.TextInputLayout>
			<android.support.design.widget.TextInputLayout
					android:id="@+id/inputAddressLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<me.argha.sustproject.views.BanglaEditText
						android:id="@+id/registerAddressEt"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:inputType="textPassword"
						android:hint="ফোন" />
			</android.support.design.widget.TextInputLayout>
			<android.support.design.widget.TextInputLayout
					android:id="@+id/inputPasswordConfirmLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<me.argha.sustproject.views.BanglaEditText
						android:id="@+id/registerPasswordConfirmEt"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:inputType="textPassword"
						android:fontFamily="sans"
						android:hint="ঠিকানা" />
			</android.support.design.widget.TextInputLayout>
			<Spinner
					android:id="@+id/registerDistrictSpinner"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>
			<me.argha.sustproject.views.BanglaButton
					android:id="@+id/registerSubmitBtn"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColor="#fff"
					android:background="@color/primary"
					android:text="রেজিস্টার"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
