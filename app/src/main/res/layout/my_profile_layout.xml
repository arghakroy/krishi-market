<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context="me.argha.sustproject.LoginActivity">
	<android.support.v7.widget.CardView
			xmlns:card_view="http://schemas.android.com/apk/res-auto"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			card_view:cardCornerRadius="2dp">
		<ScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="?attr/actionBarSize"
					android:layout_margin="10dp"
					android:orientation="vertical"
					android:padding="10dp"
					android:gravity="center">
				<android.support.design.widget.TextInputLayout
						android:id="@+id/loginInputNameLayout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

					<me.argha.sustproject.views.BanglaEditText
							android:id="@+id/myProfileNameEt"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:singleLine="true"
							android:hint="পুরো নাম" />
				</android.support.design.widget.TextInputLayout>
				<android.support.design.widget.TextInputLayout
						android:id="@+id/loginInputEmailLayout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

					<me.argha.sustproject.views.BanglaEditText
							android:id="@+id/myProfileUserNameEt"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:singleLine="true"
							android:hint="ইউজার নাম" />
				</android.support.design.widget.TextInputLayout>
				<android.support.design.widget.TextInputLayout
						android:id="@+id/input_layout_email"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

					<me.argha.sustproject.views.BanglaEditText
							android:id="@+id/myProfilePasswordEt"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:inputType="textPassword"
							android:fontFamily="sans"
							android:hint="পাসওয়ার্ড" />
				</android.support.design.widget.TextInputLayout>
				<android.support.design.widget.TextInputLayout
						android:id="@+id/inputPhoneLayout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

					<me.argha.sustproject.views.BanglaEditText
							android:id="@+id/myProfileConfirmPassword"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:inputType="textPassword"
							android:fontFamily="sans"
							android:hint="আবার পাসওয়ার্ড" />
				</android.support.design.widget.TextInputLayout>
				<android.support.design.widget.TextInputLayout
						android:id="@+id/inputAddressLayout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

					<me.argha.sustproject.views.BanglaEditText
							android:id="@+id/myProfilePhoneEt"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:inputType="text"
							android:hint="ফোন" />
				</android.support.design.widget.TextInputLayout>
				<android.support.design.widget.TextInputLayout
						android:id="@+id/inputPasswordConfirmLayout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

					<me.argha.sustproject.views.BanglaEditText
							android:id="@+id/myProfileAddressEt"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:inputType="text"
							android:hint="ঠিকানা" />
				</android.support.design.widget.TextInputLayout>
				<Spinner
						android:id="@+id/myProfileDistrictSpinner"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="10dp"
						android:entries="@array/districtsBangla"/>
				<me.argha.sustproject.views.BanglaButton
						android:id="@+id/rmyProfileUpdateBtn"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textColor="#fff"
						android:background="@color/primary"
						android:text="পরিবর্তন সংরক্ষন করুন"/>
			</LinearLayout>
		</ScrollView>
	</android.support.v7.widget.CardView>
</LinearLayout>
