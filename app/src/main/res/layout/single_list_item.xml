<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/card_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		card_view:cardCornerRadius="2dp">
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:orientation="vertical">
	<ImageView
			android:id="@+id/listItemImageIv"
			android:layout_width="match_parent"
			android:layout_height="150dp"
			android:adjustViewBounds="true"
			android:src="@drawable/ic_image_nature_people"/>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:paddingLeft="5dp"
				android:paddingBottom="3dp"
				android:gravity="center_vertical"
				android:orientation="vertical">
			<TextView
					android:id="@+id/listSingleItemName"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Item Name"
					android:textColor="#000"
					android:textSize="18sp"/>
			<TextView
					android:id="@+id/listSingleItemCategory"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Sub Category"/>
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
				<TextView
						android:id="@+id/listSingleItemPriceRange"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="15sp"
						android:layout_marginRight="5dp"
						android:text="Price Range: 100-120"/>
				<TextView
						android:id="@+id/listSingleItemRating"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Rating: 4.8"/>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="2dp"
				android:background="@color/primary_dark"/>
	</LinearLayout>
</android.support.v7.widget.CardView>